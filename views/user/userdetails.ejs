<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%= title %> </h1>
    firstName: <%= user.firstName %><p>
    lastName: <%= user.lastName %> <p>
    Email: <%= user.email %> <p>
    City: <%= user.city %> <p>
    State: <%= user.state %> <p>
    Zip: <%= user.zip %> <p>
      <a href="/users/userupdate/<%= user._id %>"> <button type="button" name="button">Update</button> </a>
      <button type="button" name="button" onclick="dele();">Delete</button>

  </body>
  <script type="text/javascript">
    function dele(){
      var de = confirm('Are u sure');
      if(de){
        location.href = '/users/userdelete/<%= user._id %>';
      }
    }
  </script>
</html>
